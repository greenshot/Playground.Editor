<Window x:Class="Playground.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playground.Editor"
        xmlns:greenshot="clr-namespace:Playground.Editor.Shapes;assembly=Playground.Editor.Shapes"
        mc:Ignorable="d"
        Title="Editor" Height="350" Width="525">
    <Canvas Name="DrawingCanvas">
        <greenshot:Arrow X1="30" Y1="30" X2="300" Y2="300" Stroke="Black" Fill="DarkCyan" />
        <greenshot:Arrow X1="30" Y1="300" X2="300" Y2="30" />
        <greenshot:Line X1="70" Y1="50" X2="200" Y2="20" />
    </Canvas>
</Window>